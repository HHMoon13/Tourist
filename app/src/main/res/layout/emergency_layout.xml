<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#e8e8ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="15dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="EMERGENCY CONTACTS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#e8e8ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="6dp">
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView


                    android:textSize="16dp"
                    android:text="Captain philips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_contact1"
                    android:focusable="false"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:text="+8801521331720"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_call_contact1"
                        android:layout_marginTop="3dp"
                        android:text="CALL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginTop="3dp"
                        android:text="EDIT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#e8e8ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="6dp">
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView


                    android:textSize="16dp"
                    android:text="Ha Ha Moon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText

                    android:id="@+id/et_contact2"
                    android:focusable="false"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:text="+8801521331897"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_call_contact2"
                        android:layout_marginTop="3dp"
                        android:text="CALL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginTop="3dp"
                        android:text="EDIT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



</FrameLayout>