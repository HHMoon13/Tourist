<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/GuideCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guide Info"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guide Name"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/guideNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lokman Bhai"
                        android:textSize="15dp"/>
                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact no."
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/guidePhoneET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="01712400131"
                        android:textSize="15dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="40dp"
                android:id="@+id/HotelCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Info"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/hotelNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hotel Albatras"
                        android:textSize="15dp"/>
                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/hotelAddrET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="21, Sajek Valley"
                        android:textSize="15dp"/>

                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact no."
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/hotelPhoneET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="+88025731"
                        android:textSize="15dp"/>
                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/hotelEmailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="contact_albatras@yahoo.com"
                        android:textSize="15dp"/>
                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/hotelWebsiteET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="www.thehotelalbatras.com"
                        android:textSize="15dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/contBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Go Back"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
